"""
    ❏DChars❏ : dchars/tests/alphabetical_weight_tests.py
"""

import unittest

from dchars.alphabetical_weight import AlphabeticalWeight

################################################################################
class TESTAlphabeticalWeight(unittest.TestCase):
    """
        class TESTAlphabeticalWeight

        We test dchars/alphabetical_weight.py
    """

    #///////////////////////////////////////////////////////////////////////////
    def test(self):
        """
                TESTAlphabeticalWeight.test
        """

        #.......................................................................
        alphaw1 = AlphabeticalWeight( [1,2,3] )
        alphaw2 = AlphabeticalWeight( [1,2,3] )

        self.assertTrue( alphaw1 == alphaw2 )
        self.assertFalse( alphaw1 < alphaw2 )
        self.assertFalse( alphaw1 > alphaw2 )

        #.......................................................................
        alphaw1 = AlphabeticalWeight( [1,2] )
        alphaw2 = AlphabeticalWeight( [1,2,3] )

        self.assertFalse( alphaw1 == alphaw2 )
        self.assertTrue( alphaw1 < alphaw2 )
        self.assertFalse( alphaw1 > alphaw2 )

        #.......................................................................
        alphaw1 = AlphabeticalWeight( [] )
        alphaw2 = AlphabeticalWeight( [1,] )

        self.assertFalse( alphaw1 == alphaw2 )
        self.assertTrue( alphaw1 < alphaw2 )
        self.assertFalse( alphaw1 > alphaw2 )

        #.......................................................................
        alphaw1 = AlphabeticalWeight( [1,2,3] )
        alphaw2 = AlphabeticalWeight( [99,] )

        self.assertFalse( alphaw1 == alphaw2 )
        self.assertTrue( alphaw1 < alphaw2 )
        self.assertFalse( alphaw1 > alphaw2 )

        #.......................................................................
        alphaw1 = AlphabeticalWeight( [1,2,3] )
        alphaw2 = AlphabeticalWeight( [99,100,101,102] )

        self.assertFalse( alphaw1 == alphaw2 )
        self.assertTrue( alphaw1 < alphaw2 )
        self.assertFalse( alphaw1 > alphaw2 )

